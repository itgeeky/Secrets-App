            <a class="btn col-12 btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign In with Google
            </a>
            <a class="btn col-12 btn-social btn-facebook" href="/auth/facebook" role="button">
              <i class="fab fa-facebook"></i>
              Sign In with Facebook
            </a>
            <p>Don't have an account? <a href="/register">Sign Up</a></p>
          </form>
          </div>
        </form>
      </div>
    </div>
</div>


